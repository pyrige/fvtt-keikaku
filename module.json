{
  "manifestPlusVersion": "1.0.0",
  "name": "fvtt-keikaku",
  "title": "Keikaku - To-Do List",
  "description": "Simple to-do list module for Foundry VTT. Every user may manage their own to-do list, add arbitrary tasks, and mark them as completed.",
  "version": "0.3.1",
  "changelog": "https://github.com/pyrige/fvtt-keikaku/blob/main/CHANGELOG.md",

  "author": "Kevin Perry",
  "authors": [
    {
      "name": "Kevin Perry",
      "discord": "Perry#5879"
    }
  ],

  "url": "https://github.com/pyrige/fvtt-keikaku",
  "bugs": "https://github.com/pyrige/fvtt-keikaku/issues",
  "allowBugReporter": true,

  "manifest": "https://github.com/pyrige/fvtt-keikaku/releases/latest/download/module.json",
  "download": "https://github.com/pyrige/fvtt-keikaku/releases/latest/download/module.zip",
  "media": [
    {
      "type": "cover",
      "url": "https://raw.githubusercontent.com/pyrige/fvtt-keikaku/main/logo.png"
    },
    {
      "type": "screenshot",
      "url": "https://raw.githubusercontent.com/pyrige/fvtt-keikaku/main/screenshot.png"
    }
  ],

  "library": false,
  "minimumCoreVersion": "0.7.5",
  "compatibleCoreVersion": "9",

  "esmodules": ["modules/keikaku.js"],
  "styles": ["styles/keikaku.css"],
  "languages": [
    {
      "lang": "en",
      "name": "English",
      "path": "i18n/en.json"
    },
    {
      "lang": "ja",
      "name": "日本語",
      "path": "i18n/ja.json"
    }
  ],

  "includes": [
    "modules/keikaku.js",

    "i18n/en.json",
    "i18n/ja.json",

    "styles/keikaku.css",

    "templates/todo-item-form.hbs",
    "templates/todo-list-control.hbs",
    "templates/todo-list-item.hbs",
    "templates/todo-list.hbs"
  ]
}
